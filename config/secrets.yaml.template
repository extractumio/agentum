# Agentum Secrets Configuration Template
# Copy this file to secrets.yaml and add your actual API key:
#   cp secrets.yaml.template secrets.yaml
#
# The secrets.yaml file is gitignored and will not be committed.

# Anthropic API Key (required)
# Get yours at: https://console.anthropic.com/settings/keys
# Format: sk-ant-api03-...
anthropic_api_key: sk-ant-REPLACE_WITH_YOUR_API_KEY

# JWT Secret for API authentication (auto-generated if not set)
# Used to sign JWT tokens for API access. If not provided,
# a random secret will be generated on first API startup.
# jwt_secret: <will-be-auto-generated>

